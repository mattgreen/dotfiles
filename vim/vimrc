set nocompatible

filetype off
call pathogen#infect()
filetype plugin indent on

" Disable swap and backup files
set nobackup
set noswapfile

set number
set ruler
set showcmd
syntax on

set encoding=utf-8

set nowrap
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
set gdefault

" Always show status bar
set laststatus=2

" Recognize certain file types as Ruby
au BufRead,BufNewFile {Gemfile,Rakefile,Vagrantfile,Thorfile,config.ru}   set ft=ruby

" Allow backspacing over everything
set backspace=indent,eol,start

" Allow shift-arrow key to work in MacVim
let macvim_hig_shift_movement = 1

:colorscheme ir_black

" Not desirable
let g:netrw_dirhistmax=0
